/**
 * Implements hook_libraries_info().
 */
function moha_ui_libraries_info() {

  $libraries[__MOHA_UI] = array(
    'name' => MOHA_UI,
    'library path' => MOHA_UI__PATH,
    'version' => '1.0',
    'files' => array(
      'js' => array('libs/weui.js/dist/weui.js'),
      'css' => array('libs/weui/dist/style/weui.css'),
      'php' => array(),
    ),
  );

  return $libraries;
}

